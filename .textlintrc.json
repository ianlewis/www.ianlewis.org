{
  "plugin": [
    {
      "id": "@textlint/textlint-plugin-text",
      "options": {}
    },
    {
      "id": "@textlint/textlint-plugin-markdown",
      "options": {}
    }
  ],
  "filters": {
    "comments": true
  },
  "rules": {
    "no-todo": true,
    "rousseau": {
      "showLevels": ["suggestion", "warning", "error"]
    },
    "spelling": {
      "language": "en",
      "skipPatterns": ["JavaScript"],
      "wordDefinitionRegexp": "/[\\w']+/g",
      "suggestCorrections": true
    }
  }
}
